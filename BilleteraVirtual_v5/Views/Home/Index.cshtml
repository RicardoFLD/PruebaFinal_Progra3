</head>
<body>
    <div class="container-fluid">
        <nav class="navbar bg-body-tertiary">
            <form class="container-fluid justify-content-start">
                <button class="btn btn-outline-success me-2" href="InsertarTarjeta.html" type="button">Insertar tarjeta</button>
            </form>
        </nav>
        <div class="container">
            <div class="row">
                <asp:Repeater ID="repTarjetas" runat="server">
                    <ItemTemplate>
                        <div class="card text-bg-dark">
                            <img src="<%# Eval("Foto")%>" class="card-img" alt="...">
                            <div class="card-img-overlay">
                                <h5 class="card-title"><%# Eval("Dueño")%></h5>
                                <p class="card-text"><%# Eval("NumeroTarjeta")%></p>
                                <p class="card-text"><small><%# Eval("codigoCVV")%></small></p>
                                <p class="card-text"><small><%# Eval("fechaExp")%></small></p>
                            </div>
                        </div>
                    </ItemTemplate>
                </asp:Repeater>

            </div>


</body>
